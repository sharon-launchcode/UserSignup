@model UserSignup.Models.User

<br />
<form method="post" action="Add">
    <!-- <p>@ViewBag.PasswordError @ViewBag.UsernameError</p>  -->

    <div class="form-element">
        <label asp-for="@Model.Username">Username: </label>
        <!-- <label>UserName</label> -->
        <!-- <input name="Username" value="@Model.Username" type="text" /> -->
        <input type="text" asp-for="@Model.Username" required />
        <span asp-validation-for="Username"></span>
    </div>
    <div class="form-element">
        <!-- <label>Email</label> -->
        <label asp-for="@Model.Email">Email:
        </label>
        <!-- <input name="Email" value="@Model.Email" type="email" /> -->
        <input type="email" asp-for="@Model.Email" required />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-element">
        <!-- <label>Password</label>  -->
        <label asp-for="@Model.Password">Password</label>
        <!-- <input name="Password" value="@Model.Password" type="password" /> -->
        <input type="password" asp-for="@Model.Password" required />
    </div>
    <div class="form-element">
        <label>Verify Password</label>
        <input name="verify" type="password" />
    </div>

    <input type="submit" value="Submit" />
</form>
